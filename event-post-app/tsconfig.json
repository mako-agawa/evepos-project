{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/commons/form.jsx",
    "src/components/commons/textarea.tsx",
    "src/components/commons/popover.jsx",
    "src/components/commons/calendar.tsx",
    "src/components/commons/button.tsx",
    "src/components/commons/label.jsx",
    "src/components/commons/input.jsx",
    "src/app/users/[id]/edit/page.tsx",
    "src/components/events/EventShow.jsx"
  ],
  "exclude": ["node_modules"]
}
